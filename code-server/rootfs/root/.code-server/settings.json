{
  "files.associations": {
    "*.dash": "yaml",
    "**/esphome/*.yaml": "esphome",
    "**/homeassistant/*.yaml": "home-assistant"
  },
  "files.watcherExclude": {
    ".nfs**": true,
    ".Trash-0/**": true,
    "**/__pycache__/**": true,
    "**/._*": true,
    "**/.cloud": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.HA_VERSION": true,
    "**/.storage": true,
    "**/*.db-shm": true,
    "**/*.db-wal": true,
    "**/*.db": true,
    "**/*.log": true,
    "**/deps/**": true,
    "**/OZW_Log.txt": true,
    "**/pyozw.sqlite": true
  },
  "search.exclude": {
    ".Trash-0/**": true,
    "**/__pycache__/**": true,
    "**/._*": true,
    "**/.cloud": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.git": true,
    "**/.HA_VERSION": true,
    "**/.storage": true,
    "**/*.db-shm": true,
    "**/*.db-wal": true,
    "**/*.db": true,
    "**/*.log": true,
    "**/deps/**": true,
    "**/OZW_Log.txt": true,
    "**/pyozw.sqlite": true
  },
  "files.exclude": {
    ".Trash-0/**": true,
    "**/__pycache__": true,
    "**/.bashrc": true,
    "**/.cache": true,
    "**/.code-server": true,
    "**/.config": true,
    "**/.DS_Store": true,
    "**/.gitconfig": true,
    "**/.HA_VERSION": true,
    "**/.hg": true,
    "**/.local": true,
    "**/.oh-my-zsh": true,
    "**/.profile": true,
    "**/.redhat": true,
    "**/.ssh": true,
    "**/.svn": true,
    "**/.zcompdump*": true,
    "**/.zsh*": true,
    "**/*.crswap": true,
    "**/*.db-shm": true,
    "**/*.db-wal": true,
    "**/CVS": true,
    "**/deps": true,
    "**/deps/**": true,
    "**/Thumbs.db": true
  },
  "yaml.customTags": [
    "!env_var scalar",
    "!include_dir_list scalar",
    "!include_dir_merge_list scalar",
    "!include_dir_merge_named scalar",
    "!include_dir_named scalar",
    "!include scalar",
    "!secret scalar",
    "!input scalar"
  ],
  "[yaml]": {
    "editor.autoIndent": "full",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "diffEditor.ignoreTrimWhitespace": false
  },
  "[home-assistant]": {
    "editor.autoIndent": "full",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "editor.renderWhitespace": "boundary",
  "esphome.validator": "local",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "update.mode": "none",
  "vsicons.dontShowNewVersionMessage": true,
  "vsicons.projectDetection.disableDetect": true,
  "workbench.iconTheme": "material-icon-theme",
  "yaml.format.enable": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.rulers": [80, 88, 100, 120],
  "workbench.colorTheme": "GitHub Dark",
  "workbench.startupEditor": "none",
  "git.confirmSync": false,
  "git.autofetch": true,
  "editor.formatOnSave": true,
  "git.enableSmartCommit": true,
  "redhat.telemetry.enabled": false,
  "git.ignoredRepositories": ["/root/.oh-my-zsh"],
  "material-icon-theme.folders.associations": {
    "addon_configs": "config",
    "homeassistant": "robot",
    ".storage": "admin",
    "blueprints": "template",
    "custom_components": "dist",
    "customizations": "include",
    "media": "audio",
    "share": "shared"
  },
  "material-icon-theme.files.associations": {
    "*.log.1": "log",
    "*.log.fault": "log"
  },
  "git.branchProtection": ["main"],
  "git.scanRepositories": [
    "homeassistant",
    "addon_configs/3d90e82e_code-server"
  ],
  "git.autoStash": true,
  "git.mergeEditor": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": false,
    "scminput": false
  },
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "diffEditor.hideUnchangedRegions.enabled": true
}
